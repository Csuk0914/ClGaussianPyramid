<pipeline>
    <!--
java -Djava.library.path=build -cp  ../GSPFramework/target/dependency/*:../GSPFramework/target/*:../GSPBaseutils/target/* fr.prima.gsp.Launcher pipeline-test-view-image-1-sec.xml
-->
    <namespace base="fr.prima.gspbaseutils"/>

    <m id="for" type="base:For" warmup="3000" period="1"/>
    <m id="load" type="c:ImageSource.ImageSource" gray="false" url="images:../media/lena512color.png"/>
    <m id="py" type="c:gspclgp.GaussPyramid"/>
    <m id="view" type="c:ImageViewer.ImageViewer" name="test view"/>
    <m id="GTK" type="c:GTKModule.GTKModule"/>

    <m id="sel" type="c:gspclgp.PyramidLevelSelector" level="2"/>
    <f id="toipl" type="c:gspclgp.RGBToIPL"/>
    <f id="torgb" type="c:gspclgp.IPLToRGB"/>

    <c chain="for - load - #py#outputRGB - toipl -sel-view"/>
    <!--c chain="for - skip#load"/-->

</pipeline>

