<pipeline>

    <namespace base="fr.prima.gspbaseutils"/>
    <m id="timer" type="base:Clock" warmupDelay="300" maxCount="-1" period="40"/>
    <m id="cons" type="base:Console"/>

    <c chain="timer#s - cons"/>

    <m id="in" type="c:clgp.ImageSource" gray="false" url="video:video.avi"/>
    <m id="clgp" type="c:clgp.Convolution"/>
    <m id="view" type="c:clgp.CvViewer"/>

    <c chain="timer - in - clgp - view"/>

</pipeline>

